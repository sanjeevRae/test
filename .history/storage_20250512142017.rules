rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // User profile images
    match /profiles/{userId}/{fileName} {
      // Anyone can read profile images of active users
      allow read: if true;
      
      // Only the owner or admins can write profile images
      allow write: if request.auth != null && 
                    (request.auth.uid == userId || request.auth.token.admin == true) &&
                    request.resource.size < 5 * 1024 * 1024 && // 5MB max
                    request.resource.contentType.matches('image/.*');
    }
    
    // Business card assets
    match /cards/{cardId}/{fileName} {
      // Anyone can read card assets
      allow read: if true;
      
      // Only the owner or admins can write card assets
      allow write: if request.auth != null &&
                    (request.auth.uid == cardId || request.auth.token.admin == true) &&
                    request.resource.size < 5 * 1024 * 1024 && // 5MB max
                    request.resource.contentType.matches('image/.*');
    }
  }
}